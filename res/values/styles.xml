<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- TabHostTest中的Style -->
    <style name="mainTabs_radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/radio_text1_dh</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <!-- ratingBar -->
    <style name="ratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rat_star</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
    </style>

    <style name="AppSplash" parent="android:Theme">
        <item name="android:windowBackground">@drawable/main_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>