<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/CbaF00"
        android:name="com.lzc.jiaowaimai.activity.Aa_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/cba_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/CbaF00"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/cba_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cba_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="红富士苹果"
        android:textColor="#008DE1"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cba_name"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cba_minus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/plus" />

        <TextView
            android:id="@+id/cba_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textSize="16sp" />

        <Button
            android:id="@+id/cba_plus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/minus" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp" >

        <Button
            android:id="@+id/cba_cancel"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="#008DE1"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/cba_commit"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="#008DE1"
            android:text="确认"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>